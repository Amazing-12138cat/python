from PyQt5 import QtWidgets,QtGui,Qt

def getHtml(url):
    headers = {
        'User-Agent': 'Mozilla / 5.0(Windows NT 10.0;Win64;x64) AppleWebKit / 537.36(KHTML, likeGecko) Chrome / 85.0.4183.102 Safari / 537.36',
    }
    r = requests.get(url,headers=headers)
    return r.text
