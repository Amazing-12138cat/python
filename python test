#  实现把多个csv文件合并到一个csv文件中

import os
import pandas
def checkfile4(file):
    if os.path.exists(file):
        print("[+]文件已存在！！")
        return 0
    else:
        with open(file,"w"):
            print("[+]正在创建文件...")
            pass
    print("[+]文件创建成功！")
def append_content(file4,file):
    a = pandas.read_csv(file,encoding='gbk')
    a.to_csv(file4,encoding='gbk',index=False,mode='a+')

def main():
    flag = 0
    file1name = "1.csv"
    file2name = "2.csv"
    file3name = "3.csv"
    file4name = "4.csv"
    file1path = "C:\\Users\\GZJ\\Desktop\\test\\"
    file2path = "C:\\Users\\GZJ\\Desktop\\test\\"
    file3path = "C:\\Users\\GZJ\\Desktop\\test\\"
    file4path = "C:\\Users\\GZJ\\Desktop\\1\\"
    file1 = file1path + file1name
    file2 = file2path + file2name
    file3 = file3path + file3name
    file4 = file4path + file4name
    checkfile4(file4)
    os.chdir("C:\\Users\\GZJ\\Desktop\\test\\")  ##切换到制定的路径进行os操作
    file_list = os.listdir()                     ##把当前所有文件名称放到一个列表中，方便后续遍历
    for file in file_list:
        print(file)
        append_content(file4,file)

if __name__ == '__main__':
    main()
